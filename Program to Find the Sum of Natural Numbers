using System;
					
public class Program
{
	public static void Main()
	{
		Console.Write("Enter your number= ");
		int num = int.Parse(Console.ReadLine());
		if (num < 0) {
   		Console.WriteLine(num);
		}
  
else {
	Console.WriteLine("Enter a positive number");
	int sum= 0;
	 while(num > 0) {
       sum += num;
       num -= 1;
	Console.WriteLine(sum);
	 }
   }
  }
}
